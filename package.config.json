{
    "skipLibCheck": true,
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ESNext",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./*"],
            "#/*": ["./tests/*"]
        },
        "baseUrl": "."
    },
    "include": [
        "index.ts",
        "types/**/*",
        "libs/*.ts",
        "util/*.ts",
        "plugins/*.ts",
        "jssdk/**/*"
    ]
}
